<section id="sponsors" class="text section--md">
  <header class="section-header">
    <div class="container container--sm text-center">
      <h1 class="section-header-title">Sponsors <small>2015</small></h1>
    </div>
  </header>

  <div class="section-body">
    <div class="container container--sm">
      <p class="lead text-center">
        UofTHacks 2015 would not have been possible <br class="visible-lg">without these fantastic sponsors.
      </p>

      <p>
        If you are interested in becoming a sponsor or partner, connect with us at <%= link_to data.emails.sponsors, "mailto:" + data.emails.sponsors %>.
      </p>
    </div>

    <div class="logo-salad container text-center">
      <% if !data.sponsors.featured.nil? %>
      <div class="logo-salad-section">
        <% data.sponsors.featured.each do |sponsor| %>
        <div class="row">
          <% link_to sponsor.url, :class => "logo-salad-logo", :target => "_blank" do %>
          <%= tag :img, :src => sponsor.src, :alt => sponsor.name, :height => sponsor.height %>
          <% end %>
        </div>
        <% end %>
      </div>
      <% end %>

      <% if !data.sponsors.support.nil? %>
      <div class="logo-salad-section">
        <% data.sponsors.support.each do |sponsor| %>
        <% link_to sponsor.url, :class => "logo-salad-logo", :target => "_blank" do %>
        <%= tag :img, :src => sponsor.src, :alt => sponsor.name, :height => sponsor.height %>
        <% end %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</section>

